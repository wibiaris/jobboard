= simple_form_for(@job, html: { class: 'form-horizontal'}) do |f|
  = f.collection_select :category_id, Category.all, :id, :name, {promt: "Select Category"}, input_html: { class: "dropdown-toggle"}
  = f.input :title, label: "Job Title", input_html: { class: "form-controll"}
  = f.input :descrtiption, label: "Job Description", input_html: { class: "form-controll"}
  = f.input :company, label: "Your Company", input_html: { class: "form-controll"}
  = f.input :url, label: "Link to Job", input_html: { class: "form-controll"}
  %br/
  = f.button :submit
